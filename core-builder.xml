<project name="core-builder" default="build">

	<target name="core-build-phar">

		<attribute name="src" />
		<attribute name="vendor" />
		<attribute name="dest" />
		<attribute name="entryPoint" />

		<exec executable="php">
			<arg value="@{vendor}/bin/build-phar.php" />
			<arg line="@{src}" />
			<arg line="@{vendor}" />
			<arg line="@{dest}" />
			<arg line="@{entryPoint}" />
		</exec>

	</target>

</project> 
